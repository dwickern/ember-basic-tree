{{! BEGIN-SNIPPET context-menu-content.hbs }}
<BasicDropdown as |dd|>
  <dd.Trigger {{on "contextmenu" (prevent-default dd.actions.open)}}>
    {{@node.content}}
  </dd.Trigger>
  <dd.Content class="context-menu-example--dropdown-content">
    {{#if @node.menuComponent}}
      {{component @node.menuComponent}}
    {{else}}
      {{@node.menuText}}
    {{/if}}
  </dd.Content>
</BasicDropdown>
{{! END-SNIPPET }}