  <span class="text-monospace">
    {{this.router.currentRouteName}}
  </span>

  <BasicTree @contentComponent={{component "navigation-example/content"}} as |tree|>
    <tree.Node @label="root" @route="docs.examples.navigation" @isExpanded={{true}}>
